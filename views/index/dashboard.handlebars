<h2>Welcome {{user.firstName}}</h2>
<h4>Your Stories</h4>
{{#if stories}}
	<table class="striped">
		<thead>
			<tr>
				<th>Title</th>
				<th>Date</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{{#each stories}}
				<tr>
					<td><a href="/stories/show/{{id}}">{{title}}</a></td>
					<td>{{formatDate date 'MMMM do YYYY'}}</td>
					<td><span class="dash-status">{{status}}</span></td>
					<td class="center-align">
						<a class="btn" href="/stories/edit/{{id}}"><i class="fa fa-pencil"></i> Edit</a>
						<form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="post">
							<input type="hidden" name="_method" value="DELETE">
							<button class="btn red" type="submit"><i class="fa fa-remove"></i> Delete</button>
						</form>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
{{else}}
	<p>You have no stories yet</p>
{{/if}}